genre = input('Выбирите музыкальный жанр(rock; jazz; k-pop; hard_rock; pop):')

out = 'Могу предложить вам следующие группы:'
songs = []
for i in allgs1[genre]:
    out += '\n-' + i
    songs += allgs1[genre][i]
print(out)
while True:
    rand = input('Скучно? Давай выберем песню рандомно?(да/нет)')
    if rand == 'да':
        print(songs[randint(0, len(songs) - 1)])
    elif rand == 'нет':
        break
